%article
  %section
    :css
      svg#page-colors-list {position: fixed; top: 0; left: 0; bottom: 0; right: 0;}

    %svg#page-colors-list{'data-channel' => 'all_users', width: '100%', height: '100%', version: '1.1', xmlns: 'http://www.w3.org/2000/svg'}
      %defs
        %linearGradient#page-color-gradient{x1: 0, x2: 0, y1: 0, y2: 1}
          - unless @latest_colors.blank?
            - ct = @latest_colors.count.to_f
            - @latest_colors.each_with_index do |color,i|
              %stop.color{offset: "#{100 * (i / (ct-1))}%", 'stop-color' => "##{color.hex_color}", 'data-uuid' => color.uuid, 'data-rgb-color' => color.rgb_color, 'data-url' => color.page.url, title: color.page.url}
      %rect{x: 0, y: 0, rx: 0, ry: 0, width: '100%', height: '100%', fill: 'url(#page-color-gradient)'}
