- info = {viewType: :site, url: web_site_path(@web_site), channel: @web_site.uuid}.to_json

:coffee
  $ ->
    $(window).one 'colorcamp:colorcanvas:mounted', ->
      $(window).trigger 'colorcamp:channel', #{info}


- if false
  - daily = @web_site.report(:daily) rescue nil

  %section
    %h1= @web_site.name
    - if daily.present?
      %h3 Today: #{daily[:count]} pages (##{daily[:hex]})

  :coffee
    document.colorCamp.channelName = 'site-#{@web_site.uuid}'
    document.colorCamp.dataLoadColors #{@latest_colors.map(&:to_public_api).to_json}